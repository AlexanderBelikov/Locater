<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/DeviceLocationSettingsLayout"
    android:orientation="vertical"
    tools:context=".DeviceLocationSettingsActivity">
    <Switch
        android:id="@+id/switcherLocaterState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Locater state"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="?attr/colorPrimary"
        />
    <Switch
        android:id="@+id/stateReceiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Locater receiver state"
        android:visibility="invisible"
        />
</LinearLayout>